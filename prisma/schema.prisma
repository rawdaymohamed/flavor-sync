generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  title       String
  description String
  color       String
  imageURL    String
  slug        String    @unique
  products    Product[]
}

model Product {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  title        String
  description  String
  imageURL     String
  price        Decimal
  isFeatured   Boolean
  category     Category @relation(fields: [categorySlug], references: [slug])
  categorySlug String
  options Json[]
}

model Order {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  price     Decimal
  status    String
  products  Json[]
  intentId  String?  @unique
  // userEmail String
}
